<br>

<div class="jumbotron">

  <% if (guild.icon) { %>
    <img class="card-img-top" style="width: 110%;" src="<%= `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png?size=512` %>" alt="<%= guild.name %>">
  <% } else { %>
    <canvas style="background-color: #7289da" class="card-img-top" id="<%= guild.name.split(' ').join('').replace(`'`, ``) %>" width="318px" height="318px"></canvas>
    <script>
      function draw() {
        const ctx = document.getElementById("<%= guild.name.split(' ').join('').replace(`'`, ``) %>").getContext('2d');
        ctx.font = '128px Arial';
        ctx.textAlign = "center";
        ctx.fillStyle = "black";
        ctx.textBaseline = "middle";
        ctx.fillText("<%= guild.name.split(' ').map(v => v[0]).join('') %>", 159, 159);
      };
      draw();
    </script>
  <% } %>
    <div class="card-body">
     <center> <h4 class="card-title"><%= guild.name %></h4></center>
      
      <ul class="list-group list-group-flush" style="width: 110%">
        <li class="list-group-item" style="width: 100%"><strong>Sahip</strong>: <%= `${guild.owner.user.tag}` %></li>
        <li class="list-group-item"><strong>Üye Sayısı</strong> : <i class="fa fa-fw fa-users" aria-hidden="true"></i> <%= `${guild.memberCount}` %></li>
        <li class="list-group-item"><strong>Rol Sayısı</strong> : <i class="fa fa-fw fa-users" aria-hidden="true"></i> <%= guild.roles.size %></li>
        <li class="list-group-item"><strong>Kanal Sayısı</strong> : <i class="fa fa-fw fa-hashtag" aria-hidden="true"></i> <%= `${guild.channels.filter(c => c.type === 'text').size}`%> <i class="fa fa-fw fa-microphone" aria-hidden="true"></i> <%= `${guild.channels.filter(c => c.type === 'voice').size}`%></li>
      </ul>
      <center>
	  <br>
	  <a style="color:#ffffff" class="btn btn-danger" data-toggle="modal" data-target="#serverLeaveModal" role="button" >Botu At<i aria-hidden="true" ></i></a>
    </center>
	
	</div>
</div>